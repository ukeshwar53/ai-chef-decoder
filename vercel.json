$json = '{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}'
$enc = New-Object System.Text.UTF8Encoding($false)
[System.IO.File]::WriteAllText('vercel.json', $json, $enc)
